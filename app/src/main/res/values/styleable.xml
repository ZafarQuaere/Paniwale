<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomSpinner">
        <attr name="floatingTitle" format="string" localization="suggested" />
        <attr name="floatColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LabelledSpinner">

        <!-- The text that is displayed on the floating label -->
        <attr name="labelText" format="string" />
        <!-- Specifies the color of the label and the bottom line -->
        <attr name="widgetColor" format="color" />

        <!-- Sets the array to be displayed on the Spinner -->
        <attr name="spinnerEntries" format="reference" />

        <!-- Controls whether an error is shown if the first item (which
        would be a prompt) is selected and has not been changed -->
        <attr name="defaultErrorEnabled" format="boolean" />

    </declare-styleable>


    <declare-styleable name="FlippableView">

        <!-- The views for the front and back of the FlippableView -->
        <attr name="viewFront" format="reference" />
        <attr name="viewBack" format="reference" />

    </declare-styleable>

</resources>